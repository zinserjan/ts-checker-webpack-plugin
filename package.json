{
  "name": "ts-checker-webpack-plugin",
  "version": "0.0.0",
  "description": "Webpack plugin that runs TypeScript's type checker",
  "keywords": [
    "webpack",
    "plugin",
    "typescript",
    "ts",
    "type",
    "checker",
    "ts-loader"
  ],
  "main": "dist/TsCheckerWebpackPlugin.js",
  "typings": "dist/TsCheckerWebpackPlugin.d.ts",
  "files": [
    "*.md",
    "src",
    "dist"
  ],
  "author": "Jan-AndrÃ© Zinser",
  "repository": {
    "type": "git",
    "url": "https://github.com/zinserjan/ts-checker-webpack-plugin"
  },
  "bugs": {
    "url": "https://github.com/zinserjan/ts-checker-webpack-plugin/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "format": "prettier --trailing-comma es5 --print-width 120 --write '{src,test}/**/*.ts'",
    "test:prod": "npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --trailing-comma es5 --print-width 120 --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "/\\.tmp/",
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "devDependencies": {
    "@types/fs-extra": "^3.0.3",
    "@types/is-promise": "0.0.3",
    "@types/jest": "^19.2.4",
    "@types/memory-fs": "^0.3.0",
    "@types/node": "^7.0.29",
    "@types/p-defer": "^1.0.0",
    "@types/webpack": "^2.2.15",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "fs-extra": "^3.0.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.4",
    "is-promise": "^2.1.0",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.1",
    "null-loader": "^0.1.1",
    "p-defer": "^1.0.0",
    "prettier": "^1.4.4",
    "react": "^15.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.1.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "typings-for-css-modules-loader": "^1.5.0",
    "webpack": "^2.6.1"
  },
  "peerDependencies": {
    "tslint": "^5.2.0",
    "typescript": "^2.3.4",
    "webpack": "^2.3.0"
  },
  "dependencies": {
    "es6-error": "^4.0.2"
  }
}
